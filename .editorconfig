# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines
# Newline ending every file
# Trim trailing whitespaces
# Set charset
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# 4 space indentation
[*.js]
indent_style = space
indent_size = 4

# 2 space indentation
[*.{yml,json}]
indent_style = space
indent_size = 2
